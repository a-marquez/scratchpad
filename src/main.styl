html
body
  width 100%
  height 100%
  background-color lighten(#DDD, 80%)

html
body
form
  margin 0px
  padding 0px

div
  cursor default

.component-list
  display grid
  height auto
  width 100%
  grid-gap 10em
  margin 5em 0em

.component-container
  padding 20px
  border 1px solid #DDD
  box-shadow 0 2px 15px rgba(0,0,0,0.30)
  background-color white
  width 600px
  align-self center
  justify-self center

  & div
  & header
  & section
  & footer
    border 1px solid rgba(0, 0, 0, 0)

    &:hover
      border 1px solid lighten(blue, 80%)

  & header
  & section
  & footer
    &:hover
      border 1px solid lighten(red, 80%)

// component

$primary = black
$secondary = white
$tertiary-1 = #DDD
$border = #DDD
$box-shadow = 0 2px 15px rgba(0,0,0,0.30)

header
  display grid
  grid-template-columns 1fr auto

.tab-list
    display grid
    grid-template-columns auto auto auto 1fr

.tab
  &
  &--active
    padding 5px

  &--active
    color $secondary
    background-color $primary

.search
  display grid
  grid-template-columns 1fr auto

.files-list
  margin 0px 1em

.file
  display grid
  grid-template-columns 1fr auto

.gist
  display grid
  grid-template-columns 1fr auto

  & div:nth-child(3)
    grid-column 1 / span 2

.gistlet
  display grid
  grid-template-columns 1fr auto

  & div:nth-child(3)
    grid-column 1 / span 2

footer
  text-align center
