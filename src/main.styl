html
body
  width 100%
  height 100%
  background-color lighten(#DDD, 80%)

html
body
form
  margin 0px
  padding 0px

div
  cursor default

.component-list
  display grid
  height auto
  width 100%
  grid-gap 10em
  margin 5em 0em

.component-container
  padding 20px
  border 1px solid #DDD
  box-shadow 0 2px 15px rgba(0,0,0,0.30)
  background-color white
  width 800px
  align-self center
  justify-self center
  display grid

  & > *
    align-self center
    justify-self center

// utilities
.padding
  padding 1em

// component

$primary = black
$secondary = white
$tertiary-1 = #DDD
$border = #DDD
$box-shadow = 0 2px 15px rgba(0,0,0,0.30)

.timer
    border 103px solid #DDD !improtatn

.timer
  &
  &--expanded
    display grid

  &__body
    border 1px solid #CCC

  &--expanded &__body
    width 500px

  &--expanded header
  &--expanded footer
    align-self center
    justify-self center
    width 400px

.control
  border 1px solid blue

